####################################################################################################

import logging
from CodeGenerator import BasicLogging

####################################################################################################

import os
import sys

code_generator_path = os.path.dirname(os.path.abspath(__file__))
source_path = os.path.dirname(code_generator_path)
# print(source_path)

sys.path.insert(0, code_generator_path)

####################################################################################################

# from CodeGenerator.CppType import TypeConversion
from CodeGenerator.Orm import (SchemaRepository, CustomTemplate,
                               Schema, Field, ForeignKey,  RelationShip)
from CodeGenerator.StandardType import (Integer, UnsignedInteger,
                                        String, StringList, Url,
                                        DateTime, UnixDateTime,
                                        GeoCoordinate)

from CodeGenerator.GeneratorSettings import generator_settings

####################################################################################################

# "name": "ffcam-refuges.json",
# "author": "Fabrice Salvaire",
# "version": 1,
# "date": "2017-04-21T18:28:11Z",
# "description": "Base de donn√©es  des refuges FFCAM",
# "url": "filer_public/ef/c7/efc713f4-e797-458c-9844-9bc3ae8fe3eb/ffcam-refuges.json",
# "size": 74840

####################################################################################################

class Document(Schema):

    __table_name__ = 'document'

    __order__ = (
        'id',
        'name',
        'author',
        'version',
        'date',
        'description',
        'url',
        'size',
    )

    id = Field(Integer, primary_key=True)
    name= Field(String)
    author= Field(String)
    version = Field(Integer)
    date = Field(UnixDateTime)
    description= Field(String)
    url = Field(Url)
    size = Field(Integer)

####################################################################################################

schema_repository = SchemaRepository('DocumentDatabaseSchema', Document)

output_dir = os.path.join(source_path, 'src', 'document')
path = os.path.join(output_dir, 'document')
schema_repository.write_source(path, generator_settings)
