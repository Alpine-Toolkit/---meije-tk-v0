import os
import sys

code_generator_path = os.path.dirname(os.path.abspath(__file__))
source_path = os.path.dirname(code_generator_path)
# print(source_path)

sys.path.insert(0, code_generator_path)

####################################################################################################

import json

from CodeGenerator.SqlOrm import SchemaRepository

from CodeGenerator.GeneratorSettings import generator_settings

####################################################################################################


document_dir = os.path.join(source_path, 'src', 'document')

####################################################################################################

# "name": "ffcam-refuges.json",
# "author": "Fabrice Salvaire",
# "version": 1,
# "date": "2017-04-21T18:28:11Z",
# "description": "Base de donn√©es  des refuges FFCAM",
# "url": "filer_public/ef/c7/efc713f4-e797-458c-9844-9bc3ae8fe3eb/ffcam-refuges.json",
# "size": 74840

####################################################################################################

json_schema = {
    'Document': (
        { 'name': 'id', 'type':'integer' },
        { 'name': 'name', 'type':'text' },
        { 'name': 'author', 'type':'text' },
        { 'name': 'version', 'type':'integer' },
        { 'name': 'date', 'type':'text', 'qt_type':'QDateTime' },
        { 'name': 'description', 'type':'text' },
        { 'name': 'url', 'type':'text', 'qt_type':'QUrl' },
        { 'name': 'size', 'type':'integer' },
    )
}

json_data = json.dumps(json_schema, indent=4)
# print(json_data)

schema_repository = SchemaRepository(json_data)

# Fixme: 
for table in schema_repository:
    # print('Table', table.name)
    # print(table.to_sql())
    header, source = table.generate_source('document', generator_settings)
    # header, source = table.generate_source(table.name)
    # print(header)
    # print(source)
    with open(os.path.join(document_dir, 'document.h'), 'w') as f:
        f.write(str(header))
    with open(os.path.join(document_dir, 'document.cpp'), 'w') as f:
        f.write(str(source))
